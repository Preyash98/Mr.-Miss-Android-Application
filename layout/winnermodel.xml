<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/positionno"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentLeft="true"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/modelusername"
            android:paddingStart="20dp"
            android:paddingTop="2dp"
            android:text="25"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cup"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/modelusername"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/winnerlikeview"
            android:layout_toRightOf="@+id/winnerlikeview"
            app:srcCompat="@color/cardview_light_background" />


        <TextView
            android:id="@+id/modelusername"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/positionno"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:hint="anonymous"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/winnerlikeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/modelusername"
            android:layout_toEndOf="@+id/modelusername"
            android:layout_toRightOf="@+id/modelusername"
            app:srcCompat="@drawable/winnermodellike" />

        <TextView
            android:id="@+id/modeluserlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/winnerlikeview"
            android:layout_toEndOf="@+id/winnerlikeview"
            android:layout_toRightOf="@+id/winnerlikeview"
            android:hint="likes"
            android:paddingLeft="5dp"
            android:paddingTop="25dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/winneruserphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/positionno"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/modelusername"
            android:adjustViewBounds="true"
            android:background="@drawable/winnerphotoview"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</android.support.v7.widget.CardView>