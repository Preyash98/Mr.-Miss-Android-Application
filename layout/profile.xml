<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:visibility="visible" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/usernamedisp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/setphotoview"
        android:layout_alignLeft="@+id/addphotobtn"
        android:layout_alignRight="@+id/setphotoview"
        android:layout_alignStart="@+id/addphotobtn"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button android:id="@+id/addphotobtn" android:layout_height="wrap_content" android:layout_width="130dp"
        android:textColor="@color/white" android:textAllCaps="false" android:text="@string/photo" android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/usernamedisp"
        android:layout_alignLeft="@+id/setphotoview"
        android:layout_alignStart="@+id/setphotoview" />


    <Button
        android:id="@+id/myalbum"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setphotoview"
        android:layout_alignEnd="@+id/usernamedisp"
        android:layout_alignRight="@+id/usernamedisp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
        android:text="Memories"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <ImageView android:id="@+id/setphotoview" android:layout_height="290dp" android:layout_width="match_parent" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:layout_below="@+id/addphotobtn" app:srcCompat="@drawable/addnewphoto" android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>
    <Button android:id="@+id/loggedout" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="16dp" android:layout_alignStart="@+id/addphotobtn" android:layout_alignLeft="@+id/addphotobtn" android:textAllCaps="false" android:text="Log out" android:layout_below="@+id/setphotoview" style="@style/Widget.AppCompat.Button.Colored"/>
    <Button android:id="@+id/uploadbtn" android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:textAllCaps="false" android:text="@string/upload" style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/loggedout"
        android:layout_alignBottom="@+id/loggedout"
        android:layout_alignRight="@+id/setphotoview"
        android:layout_alignEnd="@+id/setphotoview" />
</RelativeLayout>